<section class="mt-3 text-center">
  <h1>New group</h1>
  <%= form_with model: @group do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :icon %><br>
    <%= form.text_field :icon %>
  </div>

  <div class="btn btn-sm">
    <%= form.submit %>
  </div>
  <% end %>

</section>