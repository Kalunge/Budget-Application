<section class="category-container">
  <div class="mt-3 category p-3">
    <%= fa_icon('bars') %>
    <div>
      <h2>TRANSACTIONS</h2>
       <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-sm btn-danger btn-sm mx-5" %>
    </div>
    <i class="material-icons-outlined">search</i>
  </div>

  <div class="d-flex mt bg-light p-2 justify-content-between categ">
    <h4 class="mt-2">Gift Credit</h4>
    <h4>$45.00</h4>
  </div>

<% if @groups %>
   <% @groups.each do | group | %>
  <%= link_to group_path(group) do %>
   <div class="d-flex mt bg-light p-2 justify-content-between align-items-center categ">
     <img src="<%= group.icon %>" />
     <div class="nametime">
       <h3> <%= group.name %> </h3>
       <small class="sm-txt mt-1 date"> <%= group.created_at.strftime("%d %b %Y") %></small>
     </div>
     <h4><%=number_to_currency(group.entities.sum(:amount))%></h4>
   </div>
   <% end %>
   <% end %>
<% end %>

  <div class="d-grid gap-2 col-12 mx-auto">
    <%= link_to "Add new Category", new_group_path(),  :class => "btn btn-md btn-success" %>
  </div>

</section>